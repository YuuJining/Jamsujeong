<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:orientation="vertical"
    android:background="#756EB7">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="잠수정"
        android:textSize="50dp"
        android:textColor="#ffffff"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/main_background_line_yellow"
            android:gravity="center">

            <EditText
                android:id="@+id/loginActivity_edittext_id"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:textColorHint="#ffffff"
                android:hint="아이디" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/main_background_line"
            android:layout_marginTop="15dp"
            android:gravity="center">

            <EditText
                android:id="@+id/loginActivity_edittext_password"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:textColorHint="#ffffff"
                android:hint="비밀번호"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

        <Button
            android:id="@+id/loginActivity_button_login"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_background"
            android:layout_gravity="center"
            android:text="로그인"
            android:textColor="#000000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/loginActivity_button_signup"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="@drawable/button_background2"
            android:text="회원가입"
            android:textColor="#000000"
            android:textStyle="bold" />

</LinearLayout>