<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#756EB7">

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

         <Button
             android:id="@+id/refresh_button"
             android:layout_width="20dp"
             android:layout_height="20dp"
             android:layout_marginLeft="60dp"
             android:layout_marginTop="170dp"
             android:background="@drawable/refresh">
         </Button>



         <Button
             android:id="@+id/logout_button"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="230dp"
             android:layout_marginTop="160dp"
             android:background="@android:color/transparent"
             android:textColor="#ffffff"
             android:text="로그아웃 / 이용해제">
         </Button>

            <RelativeLayout
                android:id="@+id/informationBox"
                android:layout_width="302dp"
                android:layout_height="190dp"
                android:layout_marginTop="200dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/main_background2">

                <TextView
                    android:id="@+id/mainActivity_welcome_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="***님, 환영합니다!"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp" />

                <TextView
                    android:id="@+id/mainActivity_seatnum_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/count_view"
                    android:layout_marginLeft="20dp"
                    android:textSize="20dp"
                    android:text="이용 중인 좌석"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/count_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="20dp"
                    android:text="이용 중인 좌석이 없습니다."/>
            </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="30dp"
        android:padding="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/assignButton"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/button_background_circle"
            android:text="좌석배정" />

        <Button
            android:id="@+id/checkButton"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/button_background_circle"
            android:text="좌석확인" />

    </LinearLayout>
</LinearLayout>